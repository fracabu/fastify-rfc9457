{
  "name": "fastify-rfc9457",
  "version": "1.0.0",
  "description": "RFC 7807/9457 Problem Details for HTTP APIs - Standardized error responses for Fastify",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./problem": {
      "types": "./dist/problem.d.ts",
      "import": "./dist/problem.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "node --import tsx --test test/errors.test.ts test/problem.test.ts test/serializer.test.ts test/plugin.test.ts",
    "test:coverage": "node --import tsx --test --experimental-test-coverage test/**/*.test.ts",
    "lint": "eslint src test",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "fastify",
    "fastify-plugin",
    "error-handling",
    "rfc7807",
    "rfc9457",
    "problem-details",
    "api-errors",
    "http-errors",
    "rest-api",
    "error-response"
  ],
  "author": "fracabu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fracabu/fastify-rfc9457.git"
  },
  "bugs": {
    "url": "https://github.com/fracabu/fastify-rfc9457/issues"
  },
  "homepage": "https://github.com/fracabu/fastify-rfc9457#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "fastify-plugin": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "fastify": "^5.0.0",
    "tsup": "^8.3.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  },
  "peerDependencies": {
    "fastify": "^5.0.0"
  }
}
